<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>LoginModule.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>LogoutModule.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>SignupModule.SignupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPartnersController</servlet-name>
        <servlet-class>PartnerModule.SearchPartners.SearchPartnersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reqPartnerController</servlet-name>
        <servlet-class>PartnerModule.RequestPartners.reqPartnerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewRequestController</servlet-name>
        <servlet-class>PartnerModule.RequestPartners.viewRequestsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewPartnersController</servlet-name>
        <servlet-class>PartnerModule.ViewPartners.viewPartnersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>respondReqController</servlet-name>
        <servlet-class>PartnerModule.RequestPartners.respondReqController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actPartnerController</servlet-name>
        <servlet-class>ActivityModule.PlanActivity.actPartnerController</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>sendPlanController</servlet-name>
        <servlet-class>ActivityModule.PlanActivity.sendPlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewPlanningController</servlet-name>
        <servlet-class>ActivityModule.ViewPlanning.viewPlanningController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>respondPlanController</servlet-name>
        <servlet-class>ActivityModule.RespondPlan.respondPlanController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewConfirmedController</servlet-name>
        <servlet-class>ActivityModule.ViewConfirmed.viewConfirmedController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPartnersController</servlet-name>
        <url-pattern>/searchPartners</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reqPartnerController</servlet-name>
        <url-pattern>/reqPartner</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewRequestController</servlet-name>
        <url-pattern>/viewRequests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewPartnersController</servlet-name>
        <url-pattern>/viewPartners</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>respondReqController</servlet-name>
        <url-pattern>/respondReq</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actPartnerController</servlet-name>
        <url-pattern>/actPartner</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendPlanController</servlet-name>
        <url-pattern>/sendPlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewPlanningController</servlet-name>
        <url-pattern>/viewPlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>respondPlanController</servlet-name>
        <url-pattern>/respondPlan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewConfirmedController</servlet-name>
        <url-pattern>/viewConfirmed</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
